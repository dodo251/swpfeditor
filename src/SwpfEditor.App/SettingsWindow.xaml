<Window x:Class="SwpfEditor.App.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="设置" Height="400" Width="500" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <DockPanel Margin="10">
        <!-- Buttons at bottom -->
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,0">
            <Button Content="确定" Name="BtnOk" Click="BtnOk_OnClick" Width="75" Margin="0,0,10,0" IsDefault="True"/>
            <Button Content="取消" Name="BtnCancel" Click="BtnCancel_OnClick" Width="75" IsCancel="True"/>
        </StackPanel>
        
        <!-- Settings content -->
        <ScrollViewer>
            <StackPanel>
                <!-- Validation Settings -->
                <GroupBox Header="验证设置" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <CheckBox Name="ChkStrongValidation" Content="保存前执行强验证" Margin="0,5"/>
                        <CheckBox Name="ChkShowLineNumbers" Content="在验证消息中显示行号" Margin="0,5"/>
                    </StackPanel>
                </GroupBox>
                
                <!-- UI Settings -->
                <GroupBox Header="界面设置" Margin="0,0,0,10">
                    <Grid Margin="5">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <TextBlock Text="缩进宽度:" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
                        <TextBox Name="TxtIndentWidth" Grid.Row="0" Grid.Column="1" Margin="0,5" Width="100" HorizontalAlignment="Left"/>
                        
                        <TextBlock Text="自动展开延时 (ms):" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" Margin="0,5,10,5"/>
                        <TextBox Name="TxtAutoExpandDelay" Grid.Row="1" Grid.Column="1" Margin="0,5" Width="100" HorizontalAlignment="Left"/>
                        
                        <CheckBox Name="ChkAutoLoadSample" Content="启动时自动加载示例文件" Grid.Row="2" Grid.ColumnSpan="2" Margin="0,5"/>
                    </Grid>
                </GroupBox>
                
                <!-- Undo/Redo Settings -->
                <GroupBox Header="撤销/重做设置" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="最大撤销步数:" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Name="TxtMaxUndoSteps" Width="100"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
                
                <!-- Logging Settings -->
                <GroupBox Header="日志设置" Margin="0,0,0,10">
                    <StackPanel Margin="5">
                        <StackPanel Orientation="Horizontal" Margin="0,5">
                            <TextBlock Text="最大日志文件大小 (MB):" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <TextBox Name="TxtMaxLogFileSize" Width="100"/>
                        </StackPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </DockPanel>
</Window>